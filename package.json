{
  "name": "burro_dos_concertos",
  "version": "1.0.0",
  "description": "telegram concert manager bot",
  "main": "bot.ts",
  "exports": "./bot.js",
  "private": true,
  "engines": {
    "node": ">=20.x"
  },
  "author": {
    "name": "Daniel Azeiteiro",
    "email": "daniel.azeiteiro@gmail.com"
  },
  "keywords": [
    "concerts",
    "telegram",
    "bot"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "tsx --watch src/bot.ts",
    "clean": "rimraf dist",
    "build": "pnpm clean && tsc",
    "start": "node dist/bot.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --write src/**/*",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "pnpm lint --fix",
    "prepare": "husky",
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd",
  "dependencies": {
    "@grammyjs/conversations": "^2.1.0",
    "chrono-node": "^2.9.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "grammy": "^1.38.3",
    "pino": "^10.1.0",
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@prisma/client": "6.18.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prisma": "6.18.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
