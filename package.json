{
  "name": "burro_dos_concertos",
  "version": "1.0.0",
  "description": "telegram concert manager bot",
  "main": "dist/bot.js",
  "exports": "./dist/bot.js",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "author": {
    "name": "Daniel Azeiteiro",
    "email": "daniel.azeiteiro@gmail.com"
  },
  "keywords": [
    "concerts",
    "telegram",
    "bot"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "tsx --watch src/bot.ts",
    "dev:test": "NODE_ENV=test tsx --watch src/bot.ts",
    "clean": "rimraf dist",
    "build": "pnpm clean && tsc && tsc-alias",
    "start": "node dist/bot.js",
    "test": "NODE_OPTIONS='--localstorage-file=./jest-storage' jest --coverage",
    "test:ci": "NODE_OPTIONS='--localstorage-file=./jest-storage' jest --coverage --ci",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*\"",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "pnpm lint --fix",
    "seed": "node dist/prisma/seed.js",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production') { require('child_process').execSync('husky', {stdio: 'inherit'}) }\""
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "minimatch": "^5.1.6",
      "lodash@>=4.0.0 <=4.17.22": ">=4.17.23",
      "hono@<4.11.7": ">=4.11.7",
      "hono@<4.11.10": ">=4.11.10"
    }
  },
  "packageManager": "pnpm@10.30.2+sha512.36cdc707e7b7940a988c9c1ecf88d084f8514b5c3f085f53a2e244c2921d3b2545bc20dd4ebe1fc245feec463bb298aecea7a63ed1f7680b877dc6379d8d0cb4",
  "dependencies": {
    "@grammyjs/conversations": "^2.1.1",
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "7.4.1",
    "chrono-node": "^2.9.0",
    "cors": "^2.8.6",
    "date-fns": "^4.1.0",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "got": "^14.6.6",
    "grammy": "^1.40.1",
    "ical-generator": "^10.0.0",
    "metascraper": "^5.49.24",
    "metascraper-date": "^5.49.24",
    "metascraper-description": "^5.49.24",
    "metascraper-image": "^5.49.24",
    "metascraper-title": "^5.49.24",
    "metascraper-url": "^5.49.24",
    "node-cron": "^4.2.1",
    "pino": "^10.3.1",
    "prisma": "7.4.1",
    "puppeteer-core": "^24.37.5"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.1",
    "@types/supertest": "^7.2.0",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  }
}
