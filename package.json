{
  "name": "burro_dos_concertos",
  "version": "1.0.0",
  "description": "telegram concert manager bot",
  "main": "dist/bot.js",
  "exports": "./dist/bot.js",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "author": {
    "name": "Daniel Azeiteiro",
    "email": "daniel.azeiteiro@gmail.com"
  },
  "keywords": [
    "concerts",
    "telegram",
    "bot"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "tsx --watch src/bot.ts",
    "dev:test": "NODE_ENV=test tsx --watch src/bot.ts",
    "clean": "rimraf dist",
    "build": "pnpm clean && tsc && tsc-alias",
    "start": "node dist/bot.js",
    "test": "NODE_OPTIONS='--localstorage-file=./jest-storage' jest --coverage",
    "test:ci": "NODE_OPTIONS='--localstorage-file=./jest-storage' jest --coverage --ci",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*\"",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "pnpm lint --fix",
    "seed": "node dist/prisma/seed.js",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production') { require('child_process').execSync('husky', {stdio: 'inherit'}) }\""
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "dependencies": {
    "@grammyjs/conversations": "^2.1.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "7.3.0",
    "chrono-node": "^2.9.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "grammy": "^1.39.3",
    "node-cron": "^4.2.1",
    "pino": "^10.2.1",
    "prisma": "7.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  }
}
