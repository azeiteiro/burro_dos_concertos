{
  "name": "burro_dos_concertos",
  "version": "1.0.0",
  "description": "telegram concert manager bot",
  "main": "bot.ts",
  "exports": "./bot.js",
  "private": true,
  "engines": {
    "node": ">=20.x"
  },
  "author": {
    "name": "Daniel Azeiteiro",
    "email": "daniel.azeiteiro@gmail.com"
  },
  "scripts": {
    "dev": "tsx --watch src/bot.ts",
    "clean": "rimraf dist",
    "build": "pnpm clean && tsc",
    "start": "node dist/bot.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --write src/**/*",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "pnpm lint --fix",
    "prepare": "husky",
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "keywords": [
    "concerts",
    "telegram",
    "bot"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.18.1",
  "dependencies": {
    "dotenv": "^17.2.3",
    "grammy": "^1.38.3",
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@prisma/client": "6.17.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "prisma": "6.17.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  }
}
